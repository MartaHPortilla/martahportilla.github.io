---
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";
import { SITE } from "@consts";
import { useTranslation } from "@i18n/utils";
import { getRelativeLocaleUrl } from "astro:i18n";
import { languageList } from "@i18n/ui";

const currentLang = Astro.currentLocale || 'es';
const translateLabels = useTranslation(currentLang as keyof typeof languageList);

const otherLang = currentLang === 'es' ? 'en' : 'es';
---

<header>
  <Container>
    <div class="flex flex-wrap gap-y-2 justify-between items-center">
      <Link href={getRelativeLocaleUrl(currentLang, "/")} underline={false}>
        <div class="font-bold text-lg tracking-tight hover:text-black/80 dark:hover:text-white/80 transition-colors">
          {SITE.NAME}
        </div>
      </Link>
      
      <div class="flex items-center gap-2 sm:gap-4">
        <nav class="flex gap-1 sm:gap-2 items-center">
          <Link href={getRelativeLocaleUrl(currentLang, "/projects")} underline={false} class="px-3 py-1.5 rounded-lg hover:bg-black/5 dark:hover:bg-white/5 transition-colors font-medium">
            {translateLabels("nav.projects")}
          </Link>
          <span class="opacity-30 text-xs px-1">Â·</span>
          <Link href={getRelativeLocaleUrl(currentLang, "/work")} underline={false} class="px-3 py-1.5 rounded-lg hover:bg-black/5 dark:hover:bg-white/5 transition-colors font-medium">
            {translateLabels("nav.work")}
          </Link>
        </nav>

        <div class="flex items-center gap-1 sm:gap-2 border-l pl-2 sm:pl-4 border-black/10 dark:border-white/10">
          <Link href={getRelativeLocaleUrl(otherLang, Astro.url.pathname.replace(`/${currentLang}`, ""))} underline={false} class="px-3 py-1.5 rounded-lg hover:bg-black/5 dark:hover:bg-white/5 transition-colors">
            <span class="text-sm font-semibold">{otherLang.toUpperCase()}</span>
          </Link>
          
          <button
            id="theme-toggle"
            aria-label="Toggle theme"
            class="group size-8 flex items-center justify-center rounded-full hover:bg-black/5 dark:hover:bg-white/5 transition-colors"
          >
            <!-- Moon icon (shows in light mode) -->
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="block dark:hidden group-hover:stroke-black transition-colors duration-300 ease-in-out"
            >
              <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
            </svg>
            <!-- Sun icon (shows in dark mode) -->
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="hidden dark:block group-hover:dark:stroke-white transition-colors duration-300 ease-in-out"
            >
              <circle cx="12" cy="12" r="5"></circle>
              <line x1="12" y1="1" x2="12" y2="3"></line>
              <line x1="12" y1="21" x2="12" y2="23"></line>
              <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
              <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
              <line x1="1" y1="12" x2="3" y2="12"></line>
              <line x1="21" y1="12" x2="23" y2="12"></line>
              <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
              <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </Container>
</header>
