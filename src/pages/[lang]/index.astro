---
import { getCollection } from "astro:content";
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import ArrowCard from "@components/ArrowCard.astro";
import Link from "@components/Link.astro";
import { dateRange } from "@lib/utils";
import { SITE, SOCIALS } from "@consts";
import { getHomeMetadata } from "@i18n/metadata";
import { useTranslation } from "@i18n/utils";
import { getLang } from "@lib/utils";
import { getRelativeLocaleUrl } from "astro:i18n";
import { getEntry } from "astro:content";

const SHOW_LATEST_POSTS = false;
const lang = getLang(Astro.currentLocale);
const t = useTranslation(lang);
const metadata = getHomeMetadata(lang);

const home = await getEntry("pages", `home.${lang}`);
if (!home) {
  throw new Error(`Home page content not found for language: ${lang}`);
}

const { Content } = await home.render();

const blog = SHOW_LATEST_POSTS
  ? (await getCollection("blog"))
    .filter(post => !post.data.draft)
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
    .slice(0,SITE.NUM_POSTS_ON_HOMEPAGE)
  : [];

const projects = (await getCollection("projects"))
  .filter(project => !project.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0,SITE.NUM_PROJECTS_ON_HOMEPAGE);

const allwork = (await getCollection("work"))
  .sort((a, b) => new Date(b.data.dateStart).valueOf() - new Date(a.data.dateStart).valueOf())
  .slice(0,SITE.NUM_WORKS_ON_HOMEPAGE);

const work = await Promise.all(
  allwork.map(async (item) => {
    const { Content } = await item.render();
    return { ...item, Content };
  })
);

export async function getStaticPaths() {
  return [
    { params: { lang: "es" } },
    { params: { lang: "en" } },
  ];
}

---

<PageLayout title={metadata.TITLE} description={metadata.DESCRIPTION}>
  <Container>
    <div class="space-y-16">
      <section>
        <article class="space-y-4">
          <Content />
        </article>
      </section>

      {SHOW_LATEST_POSTS && (
        <section class="animate space-y-6">
          <div class="flex flex-wrap gap-y-2 items-center justify-between">
            <h5 class="font-semibold text-black dark:text-white">
              {t("home.blog.title")}
            </h5>
            <Link href={getRelativeLocaleUrl(lang, "blog")}>
              {t("home.blog.cta")}
            </Link>
          </div>
          <ul class="flex flex-col gap-4">
            {blog.map(post => (
              <li>
                <ArrowCard entry={post} />
              </li>
            ))}
          </ul>
        </section>
      )}  
      
      <section class="animate space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-black dark:text-white">
            {t("home.projects.title")}
          </h5>
          <Link href={getRelativeLocaleUrl(lang, "projects")}>
            {t("home.projects.cta")}
          </Link>
        </div>
        <ul class="flex flex-col gap-4">
          {projects.map(project => (
            <li>
              <ArrowCard entry={project} />
            </li>
          ))}
        </ul>
      </section>

      <section class="animate space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-black dark:text-white">
            {t("home.work.title")}
          </h5>
          <Link href={getRelativeLocaleUrl(lang, "work")}>
            {t("home.work.cta")}
          </Link>
        </div>
        <ul class="flex flex-col space-y-4">
          {work.map(entry => (
            <li>
              <div class="text-sm opacity-75">
                {dateRange(entry.data.dateStart, entry.data.dateEnd, lang)}
              </div>
              <div class="font-semibold text-black dark:text-white">
                {entry.data.company}
              </div>
              <div class="text-sm opacity-75">
                {entry.data.role}
              </div>
              <article>
                <entry.Content />
              </article>
            </li>
          ))}
        </ul>
      </section>

      <section class="animate space-y-4">
        <h5 class="font-semibold text-black dark:text-white">
          {t("home.connect.title")}
        </h5>
        <article>
          <p>
            {t("home.connect.text")}
          </p>
        </article>
        <ul class="flex flex-wrap gap-2">
          {SOCIALS.map(SOCIAL => (
            <li class="flex gap-x-2 text-nowrap">
              <Link href={SOCIAL.HREF} external aria-label={`${SITE.NAME} on ${SOCIAL.NAME}`}>
                {SOCIAL.NAME}
              </Link>
              {"/"}
            </li>
          ))}
          <li class="line-clamp-1">
            <Link href={`mailto:${SITE.EMAIL}`} aria-label={`Email ${SITE.NAME}`}>
              {SITE.EMAIL}
            </Link>
          </li>
        </ul>
      </section>
    </div>
  </Container>
</PageLayout>
